# Sending chat from the console
/s $name $ = >>>
	broadcast(color('8').simple_date('h:mm').color('gray').' [console] '.color('aqua').$name.color('dark_gray').': '.color('r').$) 
	if(function_exists('dm_broadcast_to_web')) {
		dm_broadcast_to_web($, $name)
	}
<<<

*:/say $ = >>>
	@ignorelist = import('ignorelist')
	if(array_index_exists(@ignorelist, player()) && array_contains(@ignorelist[player()], 'all')) {
		msg('You have been muted.')
		die()
	}
	broadcast(color('8').simple_date('h:mm').' '.if(player() != '~console' && array_contains(pgroup(), 'donor'), color('green').'\u2666 ')._colorname().player().color('gray').': '.color('r').$) 
<<<

