*:/unsend = >>>
	@player = import(player().'_mail');
	if(is_null(@player)) {
		die('There are no offline messages for you to unsend. Perhaps you waited too long.');
	}
	@pdata = _pdata(@player);
	if(!array_index_exists(@pdata, 'mail')) {
		die('Cannot find last sent mail to '.@player.'. Perhaps they read it already.');
	}
	@letter = null;
	@id = -1;
	foreach(@i: @l in @pdata['mail']) {
		if(@l[1] == player()) {
			@letter = @l;
			@id = @i;
		}
	}
	if(is_null(@letter)) {
		die('Cannot find last sent mail to '.@player.'.');
	}
	array_remove(@pdata['mail'], @i);
	if(array_size(@pdata['mail']) == 0) {
		array_remove(@pdata, 'mail');
	}
	_store_pdata(@player, @pdata);
	msg('Removed last sent offline message to '.@player.'.');
<<<

*:/r $ = >>>
	@conv = import('conv')
	try(@player = @conv[player()], die('You do not have any current conversations.'))
	if(@player != '~console' && !ponline(@player), die('That player is no longer online.'))
	include('includes.library/chat.ms')
	_pmsg(@player, $)
<<<

# Staff Chat Channel Toggle
*:/staffchat = >>>
	if(!has_permission('chat.staff'), die('You do not have permission.'))
	@staffchat = import('staffchat')
	if(is_null(@staffchat)) {
		@staffchat = array()
	}
	
	if(array_contains(@staffchat, player())) {
		array_remove_values(@staffchat, player())
		export('staffchat', @staffchat)
		msg('You are no longer in staff chat.')
	} else {
		@staffchat[] = player()
		export('staffchat', @staffchat)
		msg('You are now in staff chat.')
	}
<<<