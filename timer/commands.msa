*:/times [$arg='top'] [$id] [$player] = >>>
	@id = $id;
	if(!@id) {
		@regions = sk_current_regions();
		if(!@regions) {
			die('You are not standing in a course.');
		}
		@id = @regions[-1];
	}
	
	@player = $player;

	try {
		include('commands.library/'.$arg.'.ms');
	} catch(IOException @ex) {
		msg('Usage: /times <top|avg> [course] [player]');
	}
<<<
