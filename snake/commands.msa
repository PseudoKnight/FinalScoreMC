*:/snake [$action] = >>>
	if(!$action) {
		include('core.library/menu.ms');
		_snake_menu();
		die();
	}
	switch($action) {
		case 'top':
		case 'stats':
			@topScores = get_value('snake.endless.top');
			if(!@topScores) {
				die(color('gold').'There are no top scores.. yet!');
			}
			msg(color('green').color('bold').'Current Top Snake Scores [Endless Mode]');
			foreach(@topScore in @topScores) {
				@name = _pdata_by_uuid(@topScore['uuid'])['name'];
				msg(color('green').'['.@topScore['value'].'] '.color('white').@name);
			}
		
		case 'resetstats':
			if(!has_permission('group.moderator')) {
				die(color('red').'You do not have permission.');
			}
			foreach(@key: @value in get_values('snake.endless')) {
				clear_value(@key);
			}
			msg(color('green').'Reset stats.');
		
		default:
			msg('Usage: /snake [top]');
	}
<<<
