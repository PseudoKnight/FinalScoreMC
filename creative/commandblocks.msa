# Change whether commandblock is always-on ("auto") or requires redstone.
*:/scbauto $boolean = >>>
	if(!has_permission('command.cb')) {
		die('You do not have permission.');
	}
	@auto = integer($boolean == 'true');
	@block = pcursor(array(0, 8, 9, 27, 28, 50, 55, 63, 64, 65, 66, 68, 69,
		70, 71, 72, 75, 76, 77, 96, 131, 132, 143, 147, 148, 149, 150, 157));
	try {
		@cmd = get_block_command(@block);
	} catch(FormatException @ex) {
		die('You are looking at '.data_name(get_block_at(@block)).'. That is not a command block.');
	}
	@x = @block['x'];
	@y = @block['y'];
	@z = @block['z'];
	sudo("/blockdata @x @y @z {auto:@auto}");
<<<

# Toggle commandblock type
*:/scbtype = >>>
	if(!has_permission('command.cb')) {
		die('You do not have permission.');
	}
	@block = pcursor(array(0, 8, 9, 27, 28, 50, 55, 63, 64, 65, 66, 68, 69,
		70, 71, 72, 75, 76, 77, 96, 131, 132, 143, 147, 148, 149, 150, 157));
	try {
		@cmd = get_block_command(@block);
	} catch(FormatException @ex) {
		die('You are looking at '.data_name(get_block_at(@block)).'. That is not a command block.');
	}
	@blockdata = split(':', get_block_at(@block), 1);
	@type = if(@blockdata[0] == '137', 211, 137);
	set_block_at(@block, @type.':'.@blockdata[1]);
	set_block_command(@block, @cmd);
<<<

# Toggle whether commandblock is conditional
*:/scbconditional = >>>
	if(!has_permission('command.cb')) {
		die('You do not have permission.');
	}
	@block = pcursor(array(0, 8, 9, 27, 28, 50, 55, 63, 64, 65, 66, 68, 69,
		70, 71, 72, 75, 76, 77, 96, 131, 132, 143, 147, 148, 149, 150, 157));
	
	try {
		@cmd = get_block_command(@block);
	} catch(FormatException @ex) {
		die('You are looking at '.data_name(get_block_at(@block)).'. That is not a command block.');
	}
	@blockdata = split(':', get_block_at(@block), 1);
	@type = @blockdata[0];
	@data = integer(@blockdata[1]);
	@conditional = if(@data > 7, 0, 8);
	set_block_at(@block, @type.':'.(@conditional + (@data % 8)));
<<<
